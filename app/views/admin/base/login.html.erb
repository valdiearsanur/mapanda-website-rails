<div class="content">
    <!-- BEGIN LOGIN FORM -->
    <%= form_for(@admin, :url => {:controller => 'base', :method => 'post', :action => 'loginattemp'}) do |f| %>
        <h3 class="form-title">Sign In</h3>
        <div class="alert alert-danger hiddden">
            <button class="close" data-close="alert"></button>
            <span>
            Enter valid username and password. </span>
        </div>

        <div class="form-group">
            <div class="field">
                <%= f.label(:email) %><br>
                <%= f.email_field(:email, :class => 'form-control placeholder-no-fix') %>
            </div>
            <div class="field">
                <%= f.label(:password) %><br>
                <%= f.password_field(:password, :class => 'form-control placeholder-no-fix') %>
            </div>
        </div>
        <div class="form-actions">
            <%= check_box_tag(:remember_me) %>
            <%= label_tag(:remember_me, "remember me") %>
            <%= f.submit(:login, :class => 'btn btn-success', :name => 'submit-button') %>
            <a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>
        </div>
    <% end %>

    <% if @admin.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
        <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <!-- END LOGIN FORM -->
    <!-- BEGIN FORGOT PASSWORD FORM -->
    <%= form_for(:admin, :url => {:controller => 'site', :action => 'login_attemp'}, :id => 'forget-form', :class => 'forget-form', :style => 'display:none') do |f| %>
        <h3>Forget Password ?</h3>
        <p>
             Enter your e-mail address below to reset your password.
        </p>
        <div class="form-group">
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email">
        </div>
        <div class="form-actions">
            <button type="button" id="back-btn" class="btn btn-default">Back</button>
            <%= f.submit(:login, :class => 'btn btn-success', :name => 'submit-button') %>
        </div>
    <% end %>
    <!-- END FORGOT PASSWORD FORM -->
</div>