<p id="notice"><%= notice %></p>

<h1>Listing Admin Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_games.each do |admin_game| %>
      <tr>
        <td><%= admin_game.name %></td>
        <td><%= admin_game.description %></td>
        <td><%= link_to 'Show', admin_game %></td>
        <td><%= link_to 'Edit', edit_admin_game_path(admin_game) %></td>
        <td><%= link_to 'Destroy', admin_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_admin_game_path %>
